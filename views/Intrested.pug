extends layout
block content
  h1= title
  - var result = results
  button.btn( class="btn-success ml-1", onclick= createdest) create  
  div.container-fluid
     div.row
        each item,index in result
         - let destination = `dispatch(\"/intrested/update?id=${item._id}\")`
         - let createdest = `dispatch(\"/intrested/create?id=${item._id}\")`         
         - let detaildest = `dispatch(\"/intrested/detail?id=${item._id}\")`
         - let deletedest = `dispatch(\"/intrested/delete?id=${item._id}\")`
         div.col-sm-2(onclick=`buy(${index})`) subjectName: #{item["subjectName"]}  <br>  section: #{item["section"]} <br> rollnumber: #{item["rollnumber"]} 
         button.btn( class="btn-primary ml-1", onclick= destination) Update  
         button.btn( class="btn-secondary ml-1", onclick= detaildest) Detail  
         button.btn( class="btn-danger ml-1", onclick= deletedest) Delete 
  script.
                     
      function buy(index){
         alert("you purchased item "+(index+1))
      }
      function dispatch(path){ 
      window.location.href=path 
      } 