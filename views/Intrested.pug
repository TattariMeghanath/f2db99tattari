extends layout
block content
  h1= title
  - var result = results
  div.container-fluid
     div.row
        each item,index in result
         - let destination = `dispatch(\"/intrested/update?id=${item._id}\")`
         div.col-sm-2(onclick=`buy(${index})`) subjectName: #{item["subjectName"]}  <br>  section: #{item["section"]} <br> rollnumber: #{item["rollnumber"]} 
         button.btn( class="btn-primary ml-1", onclick= destination) Update  
  script.
                     
      function buy(index){
         alert("you purchased item "+(index+1))
      }
      function dispatch(path){ 
      window.location.href=path 
      } 